<% if @answer.persisted? %>
  $('.answers').append('<%= j render @answer %>');
  $('#answer_body').val('');
  $('div.answer-errors').removeClass('alert alert-danger')
<% else %>
  <% @answer.errors.each do |attr, message| %>
     $('.answer-errors').html('<%= j message %>');
  <% end %>
  $('div.answer-errors').addClass('alert alert-danger')
<% end %>
